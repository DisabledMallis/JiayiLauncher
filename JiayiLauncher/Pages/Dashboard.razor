@page "/"
@page "/Dashboard"

@using System.Diagnostics
@using JiayiLauncher.Shared.Components.Mods
@using JiayiLauncher.State.Dashboard

@inject NavigationManager NavigationManager
@inject IDispatcher Dispatcher
@inject IState<DashboardState> DashboardState

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<h3>Good @DetermineTimeOfDay()</h3>

<div class="dashboard">
    <div class="dashboard-cards">
        <div class="cards-row">
            <div class="card">
                <h4>Total play time</h4>
                @if (DashboardState.Value.Stats == null)
                {
                    <p>...</p>
                }
                else
                {
                    <p>@($"{DashboardState.Value.Stats.TotalPlayTime.TotalHours:F2} hours")</p>
                }
                <i>with Jiayi</i>
            </div>
            
            <div class="card">
                <h4>Your current version</h4>
                <p>@DashboardState.Value.CurrentVersion</p>
                <JiayiButton Size="JiayiButton.ButtonSize.Small" Style="margin-top: 0.7rem;" OnClick="VersionClicked">
                    Switch versions
                </JiayiButton>
            </div>
            
            <div class="card">
                <h4>Profiles</h4>
                
                @if (DashboardState.Value.Profiles == null)
                {
                    <i>...</i>
                }
                else
                {
                    if (DashboardState.Value.Profiles.Profiles.Count == 0)
                    {
                        <i>No profiles</i>
                    }
                    else
                    {
                        <p>
                            @DashboardState.Value.Profiles.Profiles.Count @(" ") 
                            @Pluralize(DashboardState.Value.Profiles.Profiles.Count, "profile")
                        </p>
                    }
                }
                
                <JiayiButton Size="JiayiButton.ButtonSize.Small" Style="margin-top: 0.7rem;" OnClick="ProfileClicked">
                    View profiles
                </JiayiButton>
            </div>
        </div>
        
        <div class="cards-row">
            <div class="card">
                <h4>Most recent mod</h4>
                
                @if (DashboardState.Value.Stats == null)
                {
                    <i>...</i>
                }
                else
                {
                    if (DashboardState.Value.Stats.MostRecentMod == null)
                    {
                        <i>Launch a mod to see it here</i>
                    }
                    else
                    {
                        <JiayiModCard Mod="DashboardState.Value.Stats.MostRecentMod" />
                        <i>@($"{DashboardState.Value.Stats.MostRecentMod.PlayTime.TotalHours:F2} hours played")</i>
                    }
                }
            </div>
            
            <div class="card">
                <h4>Most played mod</h4>

                @if (DashboardState.Value.Stats == null)
                {
                    <i>...</i>
                }
                else
                {
                    @if (DashboardState.Value.Stats.MostPlayedMod == null)
                    {
                        <i>Launch a mod to see it here</i>
                    }
                    else
                    {
                        <JiayiModCard Mod="DashboardState.Value.Stats.MostPlayedMod" />
                        <i>@($"{DashboardState.Value.Stats.MostPlayedMod.PlayTime.TotalHours:F2} hours played")</i>
                    }
                }
            </div>
            
            <div class="card">
                <h4>Our community</h4>
                <div class="links">
                    <a href="https://jiayi.software" title="Jiayi Software's website">
                        <span class="material-symbols-sharp">language</span>
                    </a>
                    <a href="https://github.com/JiayiSoftware/JiayiLauncher" title="Jiayi Launcher on GitHub">
                        <svg width="40px" height="40px" viewBox="0 0 40 40">
                            <use href="images/github.svg#github" />
                        </svg>
                    </a>
                    <a href="https://jiayi.software/discord" title="Talk to us on Discord">
                        <svg width="40px" height="40px" viewBox="0 0 40 40">
                            <use href="images/discord.svg#discord" />
                        </svg>
                    </a>
                </div>
                <i style="max-width: 9.7rem;">
                    Jiayi Launcher is <a href="/About">open source software</a>
                </i>
            </div>
        </div>
    </div>
    
    <div class="logo">
        <JiayiLogo Style="color: rgba(0, 0, 0, 0.2); width: 93%; text-align: center" Size="250px" Shadow="0"></JiayiLogo>
    </div>
</div>

@if (_debug)
{
    <a href="/TestPlace" style="display: @_debug">debug stuff</a>
}

@code {
    private bool _debug => Debugger.IsAttached;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Dispatcher.Dispatch(new LoadDashboardAction());
    }

    private string DetermineTimeOfDay()
    {
        var hour = DateTime.Now.Hour;
        if (hour is >= 5 and < 12)
        {
            return "morning";
        }
        return hour is >= 12 and < 17 ? "afternoon" : "evening";
    }
    
    private string Pluralize(int i, string s) => i == 1 ? s : s + "s";

    private void VersionClicked() => NavigationManager.NavigateTo("/Versions");

    private void ProfileClicked()
    {
        NavigationManager.NavigateTo("/Profiles");
    }

}